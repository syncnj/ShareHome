<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sharehome.com.androidsharehome2.AddPostActivity"
    tools:showIn="@layout/app_bar_add_post">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Title"
        android:layout_marginLeft="16dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:layout_marginLeft="16dp"
        tools:layout_editor_absoluteY="43dp"
        tools:layout_editor_absoluteX="16dp"
        android:id="@+id/PostNameInput"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post content"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="134dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/PostNameInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="180dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/PostContentInput"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <Button
        android:id="@+id/submitPost"
        android:layout_height="wrap_content"
        android:text="Post!"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="292dp"
        android:onClick="SubmitPostToServer"
        android:layout_alignTop="@+id/PostContentInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#80CBC4"
        android:layout_width="fill_parent"
        android:textColor="#FFFFFF"
        android:layout_marginTop="112dp" />
</RelativeLayout>
